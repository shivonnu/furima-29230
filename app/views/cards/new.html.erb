<%= render "shared/second-header"%>
<% breadcrumb :new_card %>
<%= form_with  url: cards_path, id: 'charge-form', class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      カード登録
    </h1>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">【カード番号】</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :number, class:"input-default", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">【ＣＶＣ】</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :cvc, class:"input-default", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">【有効期限】</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
     <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "select-birth" %>
      <p>月</p>
      <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "select-birth" %>
      <p>年</p>
    </div>
  </div>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      クレジットカード情報を登録しておくことにより
      <br>ワンクリックで購入ができるようになります。
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "登録する" , class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
